
@model YourProject.Models.Admin

@{
    ViewBag.Title = "Редактиране на администратор";
}

<h2>Редактиране на администратор</h2>

<form method="post" action="@Url.Action("EditAdmin", new { id = Model.Id })">
    <div class="form-group">
        <label for="Username">Потребителско име:</label>
        <input type="text" class="form-control" id="Username" name="Username" value="@Model.Username" />
    </div>
    <div class="form-group">
        <label for="Password">Парола:</label>
        <input type="password" class="form-control" id="Password" name="Password" value="@Model.Password" />
    </div>
    <button type="submit" class="btn btn-primary">Запазване</button>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
